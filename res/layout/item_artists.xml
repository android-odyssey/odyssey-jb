<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/artists_item_height" 
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageViewArtists"
        android:layout_width="@dimen/artists_cover_height"
        android:layout_height="@dimen/artists_cover_height"
        android:layout_weight="1.0"
    />

    <TextView
        android:id="@+id/textViewArtistsItem"
        android:layout_width="match_parent"
        android:layout_height="@dimen/artists_text_height"
        android:layout_weight="1.0"
        android:maxLines="3"
    />

</LinearLayout>
