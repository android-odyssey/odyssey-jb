<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="5dp" >
    
    <ImageView
        android:id="@+id/imageViewPlaylistPlay"
        android:layout_width="wrap_content"
       	android:layout_height="wrap_content"
        android:src="@android:drawable/ic_media_play"
    />     
    
	<LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:padding="5dp" >
	        
		    <LinearLayout     
		        android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:orientation="horizontal">       
		        
				<TextView
				    android:id="@+id/textViewPlaylistNumberItem"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:maxLines="1"
				    android:textSize="16sp" />
			    
				<TextView
			        android:id="@+id/textViewPlaylistDummyItem"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:maxLines="1"
			        android:text=" - "
				    android:textSize="16sp" 
			    /> 
			        
				<TextView
			        android:id="@+id/textViewPlaylistTitleItem"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:maxLines="1"
				    android:textSize="16sp" 
			    />        
		        
		    </LinearLayout>
		    
	    <RelativeLayout     
	        android:layout_width="wrap_content"
	    	android:layout_height="wrap_content">    
	    
			<TextView
		        android:id="@+id/textViewPlaylistArtistItem"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentLeft="true"
		        android:layout_toLeftOf="@+id/textViewPlaylistDurationItem"
		        android:maxLines="1"
		        android:textSize="12sp"
		        android:textColor="#ff777777"
		    />    
			
			<TextView
		        android:id="@+id/textViewPlaylistDurationItem"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentRight="true"
		        android:maxLines="1"
		    />		
	    
		</RelativeLayout>
	
	</LinearLayout>    
    
</LinearLayout>
