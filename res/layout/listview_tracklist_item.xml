<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp" >
	
    <LinearLayout     
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:orientation="horizontal">
        
		<TextView
	        android:id="@+id/textViewTracklistNumberItem"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:maxLines="1"
			android:textSize="16sp"
	    />        
	    
		<TextView
	        android:id="@+id/textViewTracklistDummyItem"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:maxLines="1"
	        android:text=" - "
	        android:textSize="16sp"
	    /> 
	        
		<TextView
	        android:id="@+id/textViewTracklistTitleItem"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:maxLines="1"
	        android:textSize="16sp"
	    />        
        
    </LinearLayout>
    
    <RelativeLayout     
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content">    
    
		<TextView
	        android:id="@+id/textViewTracklistArtistItem"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_toLeftOf="@+id/textViewTracklistDurationItem"
	        android:maxLines="1"
	        android:textSize="12sp"
	        android:textColor="#ff777777"
	    />    
		
		<TextView
	        android:id="@+id/textViewTracklistDurationItem"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_marginLeft="5dp"
	        android:maxLines="1"
	    />		
    
	</RelativeLayout>

</LinearLayout>
