<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical" >
    
    <ImageView
        android:id="@+id/nowPlayingAlbumImageView"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_weight="1.0"
    />  
    
    <RelativeLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    
		<TextView
		    android:id="@+id/nowPlayingMinValue"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentLeft="true"
		    android:layout_alignTop="@+id/nowPlayingSeekBar"
		    android:gravity="center" />
		
		<TextView
		    android:id="@+id/nowPlayingMaxValue"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentRight="true"
		    android:layout_alignTop="@+id/nowPlayingSeekBar"
		    android:gravity="center" />    
	    
	    <SeekBar
	        android:id="@+id/nowPlayingSeekBar"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_margin="10dp"/>    
        
    </RelativeLayout>

    <TextView
        android:id="@+id/nowPlayingTitleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" >

        <ImageButton
            android:id="@+id/nowPlayingPreviousButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_media_previous" />

        <ImageButton
            android:id="@+id/nowPlayingPlaypauseButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_media_play" />
        
        <ImageButton
            android:id="@+id/nowPlayingStopButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_delete" />

        <ImageButton
            android:id="@+id/nowPlayingNextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_media_next"/>
        
        <ImageButton
            android:id="@+id/nowPlayingRepeatButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_repeat"/>         
        
        <ImageButton
            android:id="@+id/nowPlayingRandomButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_shuffle"/>        

    </LinearLayout>

</LinearLayout>